<h1>Burger Life</h1>

<h3>How many Burgers can you eat</h3>
<h4>EAT button to delete</h4>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
<li class="burgList">
	{{burger_name}}
</li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
<li id="eatList">
     	<button class="devoBurg" data-id="{{id}}">
		EAT
	</button>
</li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
<li class="burgListDevo">
	{{burger_name}}
</li>
    {{/if}}
  {{/each}}
</ul>

<h4>Add a new burger</h4>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>
  <button type="submit" id="burgBut">Add Burger</button>
</form>